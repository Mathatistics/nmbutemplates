\setbeamerfont{title}{series=\bfseries,parent=structure,size=\fontsize{28}{30}}
\setbeamerfont{section title}{parent=structure,size=\fontsize{28}{30}}
\setbeamerfont{frametitle}{size=\fontsize{22}{24}}
\setbeamerfont{section in toc}{parent=title,size=\fontsize{18}{20}}